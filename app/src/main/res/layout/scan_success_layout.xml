<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/scan_success_bg_color"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/ll_corner_white_bg">

            <LinearLayout
                android:id="@+id/success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_48"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/scan_success" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/scan_code_success"
                    android:textColor="@color/text_color_scan_success"
                    android:textSize="@dimen/text_title" />
            </LinearLayout>

            <TextView
                android:id="@+id/equipment_name_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/success"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_48"
                android:text="@string/equipment_name_number"
                android:textColor="@color/colorDarkDot"
                android:textSize="@dimen/text_title" />

            <TextView
                android:id="@+id/equipment_name_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/equipment_name_number"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorDarkDot"
                android:textSize="@dimen/text_title" />
        </RelativeLayout>

        <Button
            android:id="@+id/scan_success_sure_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_48"
            android:layout_marginRight="@dimen/dp_48"
            android:layout_marginTop="150dp"
            android:background="@drawable/sure_btn_bg_shape"
            android:text="@string/sure"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</LinearLayout>
