<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/et_gray">

    <com.isoftston.issuser.conchapp.weight.NavBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_hidden_trouble_bg"
        android:layout_marginTop="80dp"
        android:padding="20dp"
        android:orientation="vertical"
        >
        <TextView
            style="@style/text_normal"
            android:text="@string/choice_photo_hint"
            android:textColor="@color/text_color_shallow"
            android:textSize="@dimen/text_small_small"
            />
        <com.corelibs.views.NoScrollingGridView
            android:id="@+id/gv_pic"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scrollbars="none"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:listSelector="@color/transparent"
            android:cacheColorHint="@color/transparent"
            android:horizontalSpacing="15dp"
            android:verticalSpacing="15dp"
            android:numColumns="3"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        >
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            style="@style/text_normal"
            android:textColor="@color/white"
            android:text="@string/login_confirm"
            android:background="@drawable/ll_add_corner_bg">
        </TextView>
    </LinearLayout>
</LinearLayout>