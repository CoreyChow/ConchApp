<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.isoftston.issuser.conchapp.weight.NavBar
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_corner_green"
                android:hint="@string/project_detail_name"
                android:padding="10dp"
                android:textColorHint="@color/white"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/start_work_time"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:padding="10dp"
                    android:text="2017-5-12 07:50"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/end_work_time"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:padding="10dp"
                    android:text="2017-5-12 07:50"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_corner_green1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:text="@string/manager"
                    android:textColor="@color/white" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_corner_green2"
                    android:hint="@string/project_detail_fix"
                    android:padding="10dp"
                    android:textColorHint="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>

            <com.isoftston.issuser.conchapp.weight.InputView
                android:id="@+id/jh_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.isoftston.issuser.conchapp.weight.InputView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>

            <com.isoftston.issuser.conchapp.weight.InputView
                android:id="@+id/sh_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.isoftston.issuser.conchapp.weight.InputView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>

            <com.isoftston.issuser.conchapp.weight.InputView
                android:id="@+id/pz_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.isoftston.issuser.conchapp.weight.InputView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>

            <com.isoftston.issuser.conchapp.weight.InputView
                android:id="@+id/sb_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.isoftston.issuser.conchapp.weight.InputView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>

            <com.isoftston.issuser.conchapp.weight.InputView
                android:id="@+id/sb_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.isoftston.issuser.conchapp.weight.InputView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>

            <com.isoftston.issuser.conchapp.weight.InputView
                android:id="@+id/sb_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.isoftston.issuser.conchapp.weight.InputView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>

            <com.isoftston.issuser.conchapp.weight.InputView
                android:id="@+id/work_zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.isoftston.issuser.conchapp.weight.InputView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
