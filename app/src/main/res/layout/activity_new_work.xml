<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.isoftston.issuser.conchapp.weight.NavBar
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:paddingBottom="5dp">
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/ll_add_corner_bg">
                    <TextView
                        style="@style/text_normal"
                        android:id="@+id/tv_trouble_name"
                        android:text="@string/project_detail_name"
                        android:textColor="@color/white"
                        android:paddingLeft="15dp"
                        android:layout_centerVertical="true"
                        />
                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:orientation="vertical"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ll_oval_bg"
                        android:gravity="center"
                        android:id="@+id/ll_alter"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/alter_icn"
                            />
                    </LinearLayout>
                    <EditText
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="8dp"
                        android:layout_toRightOf="@id/tv_trouble_name"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/app_light_blue"
                        android:background="@drawable/et_add_inoput_white_bg"
                        android:gravity="center_vertical"
                        android:id="@+id/et_name"
                        android:singleLine="true"
                        android:paddingLeft="15dp"
                        android:layout_marginRight="20dp" />
                    <TextView
                        style="@style/text_normal"
                        android:textColor="@color/white"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:id="@+id/tv_detail_name_content"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/start_work_time"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:padding="10dp"
                    android:text="2017-5-12 07:50"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/end_work_time"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:padding="10dp"
                    android:text="2017-5-12 07:50"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_corner_green1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:text="@string/manager"
                    android:textColor="@color/white" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_corner_green2"
                    android:hint="@string/project_detail_fix"
                    android:padding="10dp"
                    android:textColorHint="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>

            <com.isoftston.issuser.conchapp.weight.InputView
                android:id="@+id/jh_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.isoftston.issuser.conchapp.weight.InputView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>

            <com.isoftston.issuser.conchapp.weight.InputView
                android:id="@+id/sh_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.isoftston.issuser.conchapp.weight.InputView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>

            <com.isoftston.issuser.conchapp.weight.InputView
                android:id="@+id/pz_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.isoftston.issuser.conchapp.weight.InputView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>

            <com.isoftston.issuser.conchapp.weight.InputView
                android:id="@+id/sb_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.isoftston.issuser.conchapp.weight.InputView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>

            <com.isoftston.issuser.conchapp.weight.InputView
                android:id="@+id/sb_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.isoftston.issuser.conchapp.weight.InputView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>

            <com.isoftston.issuser.conchapp.weight.InputView
                android:id="@+id/sb_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.isoftston.issuser.conchapp.weight.InputView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>

            <com.isoftston.issuser.conchapp.weight.InputView
                android:id="@+id/work_zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.isoftston.issuser.conchapp.weight.InputView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c1c1"></View>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/sure"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:background="@drawable/shape_corner_green"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
